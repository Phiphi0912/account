<h1 class="text-center mt-5">Account Login</h1>
<div class="row mt-3">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control my-2" placeholder="Enter Email"
            value="{{mail}}" required>
        </div>
        <div class="form-group ">
          <label for="password" class="mt-3">Password</label>
          <input type="password" id="password" name="password" class="form-control my-2" placeholder="Enter Password"
            required>
        </div>
        {{#if match}}
        <p class="text-center mb-0 mt-3" style="color: red;">Please check your email or password</p>
        {{/if}}
        <div class="d-grid gap-3 ">
          <button type="submit" class="btn btn-outline-light my-3" style="background-color: #ff9d76;">Login</button>
        </div>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/" class="text-decoration-none" style="color: #a5a09e;">Register</a>
      </p>
    </div>
  </div>
</div>